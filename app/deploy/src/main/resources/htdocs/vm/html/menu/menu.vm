<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
#parse("content/importBase.vm")
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="css/ztree/zTreeStyle/metroStyle.css"
	type="text/css">
<script type="text/javascript" src="js/ztree/jquery.ztree.core.js"></script>
<script type="text/javascript" src="js/ztree/jquery.ztree.excheck.js"></script>
<script type="text/javascript" src="js/ztree/jquery.ztree.exedit.js"></script>

<SCRIPT type="text/javascript">
	var zTree;
	var demoIframe;

	var setting = {
		view : {
			dblClickExpand : false,
			showLine : true,
			selectedMulti : false
		},
		data : {
			simpleData : {
				enable : true,
				idKey : "id",
				pIdKey : "pId",
				rootPId : ""
			}
		},
		callback : {
			beforeClick : function(treeId, treeNode) {
				$("#button").addClass("hidden");
				$("#name").val(treeNode.name);
				$("#url").val(treeNode.file);
				$("#id").val(treeNode.id);
				$("#pid").val(treeNode.pId == "" ? "0" : treeNode.pId);
				$("#rank").val(treeNode.rank);

			},
			onRightClick : OnRightClick
		}
	};
	var zNodes = $menu;
	var rMenu, zTree;
	$(document).ready(function() {
		var t = $("#tree");
		t = jQuery.fn.zTree.init(t, setting, zNodes);
		demoIframe = $("#testIframe");
		demoIframe.bind("load", loadReady);
		zTree = jQuery.fn.zTree.getZTreeObj("tree");
		var nodes = zTree.getNodes();
		for (var i = 0; i < nodes.length; i++) { //设置节点展开
			zTree.expandNode(nodes[i], true, false, true);
		}
		zTree.selectNode(zTree.getNodeByParam("id", 101));
		rMenu = $("#rMenu");
	});

	function loadReady() {
		var bodyH = demoIframe.contents().find("body").get(0).scrollHeight, htmlH = demoIframe
				.contents().find("html").get(0).scrollHeight, maxH = Math.max(
				bodyH, htmlH), minH = Math.min(bodyH, htmlH), h = demoIframe
				.height() >= maxH ? minH : maxH;
		if (h < 530)
			h = 530;
		demoIframe.height(h);
	}

	function OnRightClick(event, treeId, treeNode) {

		if (!treeNode && event.target.tagName.toLowerCase() != "button"
				&& $(event.target).parents("a").length == 0) {
			zTree.cancelSelectedNode();
			showRMenu("root", event.clientX, event.clientY);
		} else if (treeNode && !treeNode.noR) {

			zTree.selectNode(treeNode);
			showRMenu("node", event.clientX, event.clientY);
		}
	}

	function showRMenu(type, x, y) {

		$("#rMenu ul").show();
		if (type == "root") {
			$("#m_del").hide();
			$("#m_check").hide();
			$("#m_unCheck").hide();
		} else {
			$("#m_del").show();
			$("#m_check").show();
			$("#m_unCheck").show();
		}
		y += document.body.scrollTop;
		x += document.body.scrollLeft;

		rMenu.css({
			"top" : y + "px",
			"left" : x - 240 + "px",
			"display" : "block"
		});
		$("body").bind("mousedown", onBodyMouseDown);

	}
	function hideRMenu() {
		if (rMenu)
			rMenu.css({
				"display" : "none"
			});
		$("body").unbind("mousedown", onBodyMouseDown);
	}
	function onBodyMouseDown(event) {
		if (!(event.target.id == "rMenu" || $(event.target).parents("#rMenu").length > 0)) {
			rMenu.css({
				"display" : "none"
			});
		}
	}
	var addCount = $maxid;
	function addTreeNode() {
		hideRMenu();
		addCount = addCount + 1;

		var newNode = {
			name : "增加" + addCount,
			id : addCount
		};
		if (zTree.getSelectedNodes()[0]) {
			newNode.checked = zTree.getSelectedNodes()[0].checked;
			zTree.addNodes(zTree.getSelectedNodes()[0], newNode);
		} else {
			zTree.addNodes(null, newNode);
		}
		var pid = zTree.getSelectedNodes()[0].id;
		//获取新的数据并选中（此选中只是被选中 并未被点击  所以要从新赋值）
		var node = zTree.getNodeByParam("id", addCount);
		zTree.selectNode(node, true);
		//赋值
		//修改是0 添加是  1
		$("#type").val("1");
		$("#name").val("增加" + addCount);
		$("#url").val("");
		$("#id").val(addCount);
		$("#pid").val(pid);
		$("#rank").val("0");
		$("#button").removeClass("hidden");

	}
	function removeTreeNode() {
		hideRMenu();
		var nodes = zTree.getSelectedNodes();
		if (confirm("删除不可恢复，确定删除么？") == true) {
			if (nodes && nodes.length > 0) {
				if (nodes[0].children && nodes[0].children.length > 0) {
					var msg = "要删除的节点是父节点，如果删除将连同子节点一起删掉。\n\n请确认！";
					if (confirm(msg) == true) {
						zTree.removeNode(nodes[0]);

					}
					deletemenu(nodes[0].id, "1");
				} else {
					zTree.removeNode(nodes[0]);
					deletemenu(nodes[0].id, "0");
				}
			}

		}
	}
	function deletemenu(id, type) {
		jQuery.ajax({
			url : "deletemenu.do",
			type : 'post',
			data : {
				"id" : id,
				"type" : type
			},
			dataType : 'json',
			success : function(data) {
				if (!data.success) {
					alert("删除失败！");
					return false;
				} else {
					alert("删除成功！");
					window.location.reload(true);
				}
			},
			error : function() {
				alert("异常！");
			}
		});
	}
	function selectTreeNode() {
		var nodes = zTree.getSelectedNodes();
		$("#name").val(nodes[0].name);
		$("#url").val(nodes[0].file);
		$("#id").val(nodes[0].id);
		$("#pid").val(nodes[0].pId == "" ? "0" : nodes[0].pId);
		$("#rank").val(nodes[0].rank);
		//修改是0 添加是  1
		$("#type").val("0");
		$("#button").removeClass("hidden");
	}
	function checkTreeNode(checked) {
		var nodes = zTree.getSelectedNodes();
		if (nodes && nodes.length > 0) {
			zTree.checkNode(nodes[0], checked, true);
		}
		hideRMenu();
	}
	function resetTree() {
		hideRMenu();
		jQuery.fn.zTree.init($("#tree"), setting, zNodes);
	}
</SCRIPT>
<style type="text/css">
li>ul>li {
	padding-left: 15%;
}

