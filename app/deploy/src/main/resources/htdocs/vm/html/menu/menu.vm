	position: absolute;
	display: none;
	top: 0;
	background-color: #555;
	text-align: left;
	padding: 2px;
	z-index: 999
}

#rMenu>ul>li {
	margin: 1px 0;
	padding: 0 5px;
	cursor: pointer;
	list-style: none outside none;
	background-color: #DFDFDF;
}

ul, li {
	margin: 0;
	padding: 0;
	border: 0;
	outline: 0;
	font-weight: inherit;
	font-style: inherit;
	font-size: 100%;
	font-family: inherit;
	vertical-align: baseline;
}
</style>

</head>
<body style="width: 100%;" id="body">

	<div id="page-wrapper">
		<!--BEGIN TITLE & BREADCRUMB PAGE-->
		<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
			<div class="page-header pull-left">
				<div class="page-title">菜单管理</div>
			</div>
			<ol class="breadcrumb page-breadcrumb pull-right">
				<li><i class="fa fa-home"></i>&nbsp;<a href="#">菜单管理</a>&nbsp;&nbsp;&nbsp;&nbsp;</li>
				<li class="hidden"><a href="#">菜单管理</a>&nbsp;&nbsp;<i
					class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
			</ol>

			<div class="clearfix"></div>
		</div>

		<div class="clearfix">
			<TABLE border=0 height=600px align=left>
				<TR>
					<TD align=left valign=top
						style="BORDER-RIGHT: #999999 1px dashed; width: 30%;">
						<div id="rMenu">
							<ul>
								<li id="m_add" onclick="addTreeNode();">增加子菜单</li>
								<li id="m_del" onclick="removeTreeNode();">删除菜单</li>
								<li id="m_check" onclick="selectTreeNode();">编辑菜单</li>
							</ul>
						</div>
						<ul id="tree" class="ztree" style="width: 100%; overflow: auto;"></ul>

					</TD>
					<TD width=770px align=left valign=top>
						<div class="modal-body">
							<form class="form-horizontal" role="form" name="noticeform"
								id="form" name="form" method="post">
								<div class="form-group">
									<label for="lastname" class="col-sm-2 control-label">菜单名称：</label>
									<div class="col-sm-10">
										<input type="hidden" id="type" value="0" name="type"
											class="form-control" /> <input type="hidden" id="id" value=""
											name="id" class="form-control" /> <input type="hidden"
											id="pid" value="" name="pid" class="form-control" /> <input
											type="text" id="name" value="" name="name"
											class="form-control" />
									</div>
								</div>
								<div class="form-group">
									<label for="lastname" class="col-sm-2 control-label">菜单地址：</label>
									<div class="col-sm-10">
										<input type="text" id="url" value="" name="url"
											class="form-control" />
									</div>
								</div>
								<div class="form-group">
									<label for="lastname" class="col-sm-2 control-label">排列顺序：</label>
									<div class="col-sm-10">
										<input type="number" id="rank" name="rank"
											class="form-control" min="1"
											onkeyup="this.value=this.value.replace(/\D/g,'')"
											onafterpaste="this.value=this.value.replace(/\D/g,'')"
											value="1" />
									</div>
								</div>
							</form>
						</div>
						<div class="modal-footer hidden" id="button">
							<button type="button" id="submitReply" class="btn btn-primary"
								onclick="submit()">确定</button>
							<button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
						</div>
					</TD>
				</TR>
			</TABLE>
		</div>

	</div>

</body>
<script type="text/javascript">
	function submit() {
		jQuery.ajax({
			url : $("#type").val() == "0" ? "updatemenu.do" : "addmenu.do",
			type : 'post',
			data : {
				"id" : $("#id").val(),
				"name" : $("#name").val(),
				"url" : $("#url").val(),
				"rank" : $("#rank").val(),
				"pid" : $("#pid").val()
			},
			dataType : 'json',
			success : function(data) {
				if (!data.success) {
					alert(data.message);
					return false;
				} else {
					alert(data.message);
					window.location.reload(true);
				}
			},
			error : function() {
				alert("异常！");
			}
		});
	}
</script>
