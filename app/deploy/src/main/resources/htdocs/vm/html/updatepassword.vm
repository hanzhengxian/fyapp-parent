<!DOCTYPE html>
<html>
<head>
#parse("content/importBase.vm")
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style type="text/css">
li>ul>li {
	padding-left: 15%;
}
</style>
</head>
<body style="width: 100%; text-align: center" id="body">
	<div id="page-wrapper">
		<!--BEGIN TITLE & BREADCRUMB PAGE-->
		<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
			<div class="page-header pull-left">
				<div class="page-title">首页</div>
			</div>
			<ol class="breadcrumb page-breadcrumb pull-right">
				<li><i class="fa fa-home"></i>&nbsp;<a href="welcome.html">Home</a>&nbsp;&nbsp;<i
					class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
				<li class="hidden"><a href="#">首页</a>&nbsp;&nbsp;<i
					class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
				<li class="active">修改密码</li>
			</ol>
			<div class="clearfix"></div>
		</div>

		<div style="margin-left: 20%; margin-top: 12%;">
			<div class="row">
				<label class="col-sm-2 control-label"
					style="text-align: right; margin-top: 5px">原密码：</label>
				<div class="col-sm-3">
					<div class="control-group">
						<input type="password" id="password" class="form-control" /> <br />
					</div>
				</div>
			</div>
			<div class="row">
				<label class="col-sm-2 control-label"
					style="text-align: right; margin-top: 5px">新密码：</label>
				<div class="col-sm-3">
					<div class="control-group">
						<input type="password" id="newpassword" class="form-control" /> <br />
					</div>
				</div>
			</div>
			<div class="row">
				<label class="col-sm-2 control-label"
					style="text-align: right; margin-top: 5px">请再次输入密码：</label>
				<div class="col-sm-3">
					<div class="control-group">
						<input type="password" id="newpasswords" class="form-control" /> <br />
					</div>
				</div>
			</div>
			<div class="row">
				<label class="col-sm-2 control-label"
					style="text-align: right; margin-top: 5px"></label>
				<div class="col-sm-3">
					<div class="control-group">
						<div class="modal-footer">
							<button type="button" class="btn btn-primary" onclick="submit()">确定</button>
						</div>
						<br />
					</div>
				</div>
			</div>

		</div>
	</div>

</body>
<script>
	function submit() {
		jQuery.ajax({
			url : "updatemypassword.do",
			type : 'post',
			data : {
				"password" : $("#password").val(),
				"newpassword" : $("#newpassword").val(),
				"newpasswords" : $("#newpasswords").val()
			},
			dataType : 'json',
			success : function(json) {
				if (!json.success) {
					alert(json.message);
					return false;
				} else {
					alert(json.message);
					out();
				}
			},
			error : function() {
				alert("异常！");
			}
		});
	}
	function checkPassStrong(str) {
		if (str.length < 6) {
			return false;
		}
		var containDigit = RegExp(/[\d]+/).test(str);
		var containLetters = RegExp(/[a-zA-Z]+/).test(str);
		if (containDigit && containLetters) {
			return true;
		} else {
			return false;
		}
	}

	function out() {
		jQuery.ajax({
			url : "removesession.do",
			type : 'post',
			dataType : 'json',
			success : function(json) {

			}
		});
		window.location.href = "/index";
	}
</script>

</html>